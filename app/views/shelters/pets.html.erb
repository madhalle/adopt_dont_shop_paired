<h1>All Available Pets for Adoption</h1>

<section class="edit-buttons-<%= @shelter.id %>">
<div class="edit-buttons">
  <button><%= link_to 'Create Pet', "/shelters/#{@shelter.id}/pets/new" %></button>
  <button><%= link_to "Return to #{@shelter.name}", "/shelters/#{@shelter.id}" %></button>
  <p>Number of Pets: &nbsp;<%= @shelter.total_pets %></p>
</div>
</section>

<section class="show">
<% @list_of_pets.each do |pet| %>
  <p class="name"><%= link_to "#{pet.name}", "/pets/#{pet.id}"%></p>
  <img src="<%= pet.image %>" alt-"it could be yours" width = "300" height = "240"</img>
  <p><button><%= link_to 'Update Pet', "/pets/#{pet.id}/edit" %></button>
  <button><%= link_to 'Delete Pet', "/pets/#{pet.id}", method: :delete %></button></p>
  <p>Approximate Age:<%= pet.approximate_age %></p>
  <p>Sex:<%= pet.sex %></p>
<% end %>
</section>
