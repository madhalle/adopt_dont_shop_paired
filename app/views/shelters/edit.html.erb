<h1>Update Shelter</h1>
<div class="edit-buttons">
  <button><%= link_to "Return to #{@shelter.name}", "/shelters/#{@shelter.id}" %></button>
</div>
<section class="form">
  <%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
    <p>Fill in the blanks with the updated information.</p>
    <%= label_tag :name %>
    <%= text_field_tag :name, @shelter.name %><br/>
    <%= label_tag :address %>
    <%= text_field_tag :address, @shelter.address %><br/>
    <%= label_tag :city %>
    <%= text_field_tag :city, @shelter.city %><br/>
    <%= label_tag :state %>
    <%= text_field_tag :state, @shelter.state %><br/>
    <%= label_tag :zip %>
    <%= text_field_tag :zip, @shelter.zip %><br/>

    <p><%= submit_tag 'Update Shelter' %></p>
  <% end %>
</section>
